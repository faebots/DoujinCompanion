<Window x:Class="DoujinCompanion.StartupScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoujinCompanion"
        mc:Ignorable="d"
        Title="Setup"
        SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Margin="0,0,-0.5,0" Height="89" VerticalAlignment="Top">
            <TextBlock TextWrapping="Wrap" Text="Please select a location for your library or locate an existing library." Margin="5" FontSize="14" TextAlignment="Center"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Use Existing" Margin="20,10" FontSize="14" Click="Button_Click"/>
                <Button Grid.Column="1" Content="Cancel" Margin="20,10" FontSize="14"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
